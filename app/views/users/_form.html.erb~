<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="fields">
      <div class="min_user">
        <!-- x icon to remove -->
        <!-- fields -->
        <%= f.input :email %>
        <%= f.input :password %>
        <%= f.input :password_confirmation %>
      </div>
     <% if current_user && current_user.is_admin? %>
       <%= f.input :role %>
     <% end %>
     <%= f.input :group_id %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
